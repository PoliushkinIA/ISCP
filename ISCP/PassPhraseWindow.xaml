<Window x:Class="ISCP.PassPhraseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISCP"
        mc:Ignorable="d"
        Title="Password" Height="140" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <TextBlock Margin="10,15,0,0" Text="Enter the password phrase:"/>
        <PasswordBox x:Name="password" Margin="10,3,10,0"/>
        <WrapPanel HorizontalAlignment="Right" Margin="0,15,10,0">
            <Button x:Name="buttonOk" Margin="0,0,5,0" MinWidth="50" Content="OK" IsDefault="True" Click="buttonOk_Click"/>
            <Button x:Name="buttonCancel" MinWidth="50" Content="Cancel" IsCancel="True" Click="buttonCancel_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
