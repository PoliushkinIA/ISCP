<Window x:Class="ISCP.EditMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISCP"
        mc:Ignorable="d"
        Title="Message Editor" Height="300" Width="400">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" MinHeight="30">
            <Button x:Name="OK" Content="OK" Margin="3" MinWidth="65" Click="OK_Click"/>
            <Button x:Name="Cancel" Content="Cancel" Margin="3" MinWidth="65" Click="Cancel_Click"/>
        </StackPanel>
        <TextBox x:Name="message" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="3"/>
    </DockPanel>
</Window>
